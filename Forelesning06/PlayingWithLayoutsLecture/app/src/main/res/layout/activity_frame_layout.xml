<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.perev.playingwithlayoutslecture.FrameLayoutActivity">

    <View
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="end|bottom"
        android:layout_margin="20dp"
        android:background="#1f1fb4"/>

    <View
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal|bottom"
        android:background="#ff5566" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="@drawable/seen"
        android:foregroundGravity="top|right">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wolf_of_wall_street"
            android:contentDescription="@string/wolf_of_wall_street"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/poster_frame"
            android:contentDescription="@string/poster_frame"/>

    </FrameLayout>

</FrameLayout>
